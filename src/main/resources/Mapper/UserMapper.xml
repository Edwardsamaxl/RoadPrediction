<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.backend.Mapper.UserMapper">

    <resultMap id="userResultMap" type="org.example.backend.Entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="user_password"/>
    </resultMap>

    <select id="selectByUsername" resultMap="userResultMap" parameterType="java.lang.String">
        SELECT id, username, user_password FROM user WHERE username = #{value}
    </select>

    <select id="selectByUsernameAndPassword" resultMap="userResultMap" parameterType="java.util.Map">
        SELECT id, username, user_password FROM user WHERE username = #{username} AND user_password = #{password}
    </select>

    <insert id="insert" parameterType="org.example.backend.Entity.User">
        INSERT INTO user (username, user_password)
        VALUES (#{username}, #{password})
    </insert>

    <update id="updatePassword" parameterType="org.example.backend.Entity.User">
        UPDATE user SET user_password = #{password} WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="userResultMap" parameterType="java.lang.Integer">
        SELECT id, username, user_password FROM user WHERE id = #{value}
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM user WHERE id = #{value}
    </delete>
</mapper>
